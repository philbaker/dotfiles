
# Applications
alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
alias n='nvim'

# Git 
alias ga='git add'
alias gaa='git add .'
alias gc='git commit -m '
alias gco='git checkout '
alias gp='git push'
alias gs='git status'
alias nah='git reset --hard;git clean -df;'

# Mac
alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES;
killall Finder /System/Library/CoreServices/Finder.app'
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'

# Locations
alias lrn='~/Documents/learning'

alias szh='echo source ~/.zshrc && source ~/.zshrc'
alias ezh='n ~/.zshrc'
alias hal='cat ${(%):-%N}'
alias viml='cat ~/.vim-commands'
alias vima='cat ~/.vim-commands-archive'
alias eviml='n ~/.vim-commands'
alias evima='n ~/.vim-commands-archive'
alias envi='n ~/.nvimrc'
alias pnvi='cat ~/.nvimrc'

# Command line apps
function foos() {
  ~/Documents/learning/ruby/noko/get_football_stream "$1"
}
